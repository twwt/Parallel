# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET         /index/               @controllers.Application.index
GET         /submit/              @controllers.Application.submit
GET         /input/               @controllers.Application.input
GET         /post/all/*url        @controllers.Application.showAll(url: String)
POST        /api/post/*url        @controllers.PostController.messagePost(url: String)
#POST        /api/post/*limit        @controllers.Application.getPost(limit: Int)
GET         /*url                 @controllers.Application.show(url: String)
#GET        /*url                @controllers.Application.urlShow(url: String)

# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file         @controllers.Assets.versioned(path="/public", file: Asset)
